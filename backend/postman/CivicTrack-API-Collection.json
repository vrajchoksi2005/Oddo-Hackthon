{
  "info": {
    "name": "CivicTrack API Collection",
    "description": "Complete API collection for CivicTrack - A civic issue reporting platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    },
    {
      "key": "issueId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"Test@123\",\n  \"phone\": \"9876543210\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('authToken', response.data.token);",
                  "    pm.collectionVariables.set('userId', response.data.user._id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"Test@123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('authToken', response.data.token);",
                  "    pm.collectionVariables.set('userId', response.data.user._id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/profile",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "profile"]
            }
          }
        },
        {
          "name": "Admin Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@civictrack.com\",\n  \"password\": \"Admin@123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Issues",
      "item": [
        {
          "name": "Create Issue (Authenticated)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "title",
                  "value": "Pothole on Main Road",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "Large pothole causing traffic issues near IT bridge",
                  "type": "text"
                },
                {
                  "key": "category",
                  "value": "Road",
                  "type": "text"
                },
                {
                  "key": "coordinates",
                  "value": "[72.5714, 23.0225]",
                  "type": "text"
                },
                {
                  "key": "address",
                  "value": "Main Road, Ahmedabad",
                  "type": "text"
                },
                {
                  "key": "isAnonymous",
                  "value": "false",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/issues",
              "host": ["{{baseUrl}}"],
              "path": ["issues"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('issueId', response.data.issue._id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Create Anonymous Issue",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "title",
                  "value": "Broken Street Light",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "Street light has been broken for weeks",
                  "type": "text"
                },
                {
                  "key": "category",
                  "value": "Lighting",
                  "type": "text"
                },
                {
                  "key": "coordinates",
                  "value": "[72.5714, 23.0225]",
                  "type": "text"
                },
                {
                  "key": "isAnonymous",
                  "value": "true",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/issues",
              "host": ["{{baseUrl}}"],
              "path": ["issues"]
            }
          }
        },
        {
          "name": "Get All Issues",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/issues?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["issues"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Nearby Issues",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/issues/nearby?lat=23.0225&lng=72.5714&distance=5000&category=Road",
              "host": ["{{baseUrl}}"],
              "path": ["issues", "nearby"],
              "query": [
                {
                  "key": "lat",
                  "value": "23.0225"
                },
                {
                  "key": "lng",
                  "value": "72.5714"
                },
                {
                  "key": "distance",
                  "value": "5000"
                },
                {
                  "key": "category",
                  "value": "Road"
                }
              ]
            }
          }
        },
        {
          "name": "Get Issue by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/issues/{{issueId}}",
              "host": ["{{baseUrl}}"],
              "path": ["issues", "{{issueId}}"]
            }
          }
        },
        {
          "name": "Update Issue Status (Admin)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"In Progress\",\n  \"note\": \"Work has been started on this issue\",\n  \"priority\": \"High\",\n  \"adminNotes\": \"Assigned to road maintenance team\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/issues/{{issueId}}/status",
              "host": ["{{baseUrl}}"],
              "path": ["issues", "{{issueId}}", "status"]
            }
          }
        },
        {
          "name": "Report Spam",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reason\": \"Fake Report\",\n  \"description\": \"This appears to be a fake issue report\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/issues/{{issueId}}/spam",
              "host": ["{{baseUrl}}"],
              "path": ["issues", "{{issueId}}", "spam"]
            }
          }
        },
        {
          "name": "Upvote Issue",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/issues/{{issueId}}/upvote",
              "host": ["{{baseUrl}}"],
              "path": ["issues", "{{issueId}}", "upvote"]
            }
          }
        },
        {
          "name": "Get Issue Activity",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/issues/{{issueId}}/activity",
              "host": ["{{baseUrl}}"],
              "path": ["issues", "{{issueId}}", "activity"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Get Dashboard Stats",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/dashboard",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "dashboard"]
            }
          }
        },
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/users?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "users"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Ban User",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reason\": \"Repeated spam reports and fake issues\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/users/{{userId}}/ban",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "users", "{{userId}}", "ban"]
            }
          }
        },
        {
          "name": "Get Analytics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/analytics",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "analytics"]
            }
          }
        },
        {
          "name": "Get Spam Reports",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/spam-reports",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "spam-reports"]
            }
          }
        }
      ]
    },
    {
      "name": "User",
      "item": [
        {
          "name": "Get User Stats",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users/stats",
              "host": ["{{baseUrl}}"],
              "path": ["users", "stats"]
            }
          }
        },
        {
          "name": "Get User Issues",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users/issues?status=Reported&page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["users", "issues"],
              "query": [
                {
                  "key": "status",
                  "value": "Reported"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/../health",
          "host": ["{{baseUrl}}"],
          "path": ["..", "health"]
        }
      }
    }
  ]
}
